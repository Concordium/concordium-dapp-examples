{
    "private": true,
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/Concordium/concordium-governance-committee-voting",
        "directory": "apps"
    },
    "author": {
        "name": "Concordium Software",
        "email": "support@concordium.software",
        "url": "https://concordium.com"
    },
    "workspaces": [
        "./demo"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "prettier": "^3.0.3",
        "typescript": "^5.2.2"
    },
    "packageManager": "yarn@4.0.1",
    "scripts": {
        "build:all": "yarn workspaces foreach --all -pt run build",
        "lint:all": "eslint . --cache --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint-fix:all": "yarn lint --fix",
        "prettier": "prettier ./.*.* ./*.* -u",
        "fmt:all": "yarn prettier --write && yarn workspaces foreach --all run fmt",
        "fmt-check:all": "yarn prettier --check && yarn workspaces foreach --all run fmt-check"
    }
}
